{
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.13",
        "concurrently": "^8.2.2",
        "tailwindcss": "^3.4.3"
    },
    "scripts": {
        "tailwind:dev": "npx tailwindcss -i static/css/input.css -o static/css/style.css --watch",
        "templ:dev": "templ generate -watch",
        "dev": "concurrently --kill-others npm:tailwind:dev npm:templ:dev",
        "templ:build": "templ generate",
        "tailwind:build": "npx tailwindcss -i static/css/input.css -o static/css/style.css --minify",
        "build": "npm run tailwind:build && npm run templ:build"
    }
}